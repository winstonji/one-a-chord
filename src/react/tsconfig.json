{
	"compilerOptions": {
		"jsx": "react",
		"module": "ESNext",
		"moduleResolution": "node",
		"removeComments": false,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"paths": {
			"*": ["*", "src/*", "../global/*"]
		}
	},
	"include": ["./**/*.ts", "./**/*.tsx", "../../global/**/*.ts"],
	"exclude": ["./node_modules"]
}
